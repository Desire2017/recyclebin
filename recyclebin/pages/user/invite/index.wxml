<!--pages/user/invite/index.wxml-->
<view class="erweima">
  <view class="head">
    <image src="{{headImg}}" style="margin-right:68rpx; width:65px; height:65px; border-radius:50%;"></image>
    <view>
      <view class="name">{{name}}</view>
    </view>
  </view>
  <image src="{{img}}" style="display:block; margin:0 auto; width:550rpx; height:550rpx;"></image>
  <view bindtap="saveImg" class="save" data-src="{{img}}">
    <text>点击保存分享码</text>
  </view>
  <loading hidden="{{hiddenLoading}}">正在加载</loading>
</view>